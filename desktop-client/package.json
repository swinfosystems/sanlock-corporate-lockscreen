{
  "name": "corporate-lockscreen-client",
  "version": "1.0.0",
  "description": "Corporate lockscreen application with remote access capabilities",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.corporate.lockscreen",
    "productName": "Corporate Lockscreen",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [
    "lockscreen",
    "corporate",
    "remote-access",
    "security"
  ],
  "author": "Corporate Security Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "socket.io-client": "^4.7.2",
    "node-machine-id": "^1.1.12",
    "screenshot-desktop": "^1.12.7",
    "robotjs": "^0.6.0",
    "crypto-js": "^4.1.1"
  }
}
